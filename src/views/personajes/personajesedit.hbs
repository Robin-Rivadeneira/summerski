<LINK REL=StyleSheet HREF="/css/personajes.css" TYPE="text/css" MEDIA=screen>
<form action="/personajes/edit/{{Traer.id}}" method="POST">
<div id="contenedor">
    <div id="Nombres">
    <label id="Nombre">Nombre </label>
    <input type="text" id="nombre" name="Nombre" value="{{Traer.Nombre}}">
    </div>
    <div id="Edades">
    <label id="Edad">Edad </label>
    <input type="text" id="edad" name="edad" value="{{Traer.Edad}}">
    </div>
    <div id="Estaturas">
    <label id="Estatura">Estatura </label>
    <input type="text" id="estatura" name="estatura" value="{{Traer.Estatura}}">
    </div>
    <div id="Descripciones">
    <label id="Descripcion">Descripcion</label>
    <textarea name="Descripcion" id="descripcion" cols="30" rows="10" placeholder="Agregar Texto" spellcheck="true" maxlength="150" >{{Traer.Descripcion}}</textarea>
    </div>
    <div id="Boton">
    <button type="submit" id="boton"><img src="/img/guardar.png" id="guardar"></button>
    </div>
</div>
</form>
